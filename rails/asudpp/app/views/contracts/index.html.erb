<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <!-- % content_for :title, t('contract.title.list')% -->
  <% content_for :head do %>
    <title><%= t('contract.title.list') %></title>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= t('contract.title.list') %></h1>
    <%= link_to t('contract.button.new'), new_contract_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="contracts" class="min-w-full">
    <% @contracts.each do |contract| %>
      <%= render contract %>
      <p>
        <%= link_to t('contract.button.show'), contract, class: "ml-2 rounded-lg py-3 px-5 bg-gray-300 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
