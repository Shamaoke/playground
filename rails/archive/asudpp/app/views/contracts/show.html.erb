<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>


    <% content_for :head do %>
      <title><%= t('contract.title.show') %> â„–<%= @contract.number %></title>
    <% end %>

    <%= render @contract %>

    <% if can? :update, @contract %>
      <%= link_to t('contract.button.edit'), edit_contract_path(@contract), class: "mt-2 rounded-lg py-3 px-5 bg-gray-300 inline-block font-medium" %>
    <% end %>

    <%= link_to t('contract.button.back'), contracts_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-300 inline-block font-medium" %>

    <% if can? :destroy, @contract %>
      <div class="inline-block ml-2">
        <%= button_to t('contract.button.delete'), @contract, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-600 text-white font-medium" %>
      </div>
    <% end %>
  </div>
</div>
