
///
/// ::: Пример 2. Построение трехмерного графика функции z(x, y) = 5y² - x² в
///     области x ∈ [-2; 2], y ∈ [-3; 3] :::
///

[x, y] = meshgrid(-2:2, -3:3);

z = 5 * y .^ 2 - x .^ 2;

subplot(2, 1, 1);
mesh(x, y, z);

[x, y] = meshgrid(-2.0:0.1:2.0, -3.0:0.1:3.0);

z = 5 * y .^ 2 - x .^ 2;

subplot(2, 1, 2);
mesh(x, y, z);

